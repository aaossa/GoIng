                        <% end %>
                        <div class="dropdown-menu">
                            <% if can? :new, Request %>
                                <%= link_to('Pedir una clase', new_request_path, { class: "dropdown-item" }) %>
                            <% end %>
                            <% if can? :index, Request %>
                                <%= link_to('Ver peticiones', { controller: 'requests' }, { class: "dropdown-item" }) %>
