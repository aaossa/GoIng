                        <%= link_to('Cursos', { controller: 'courses' }, { class: "nav-link" }) %>
                    </li>
                    <% if signed_in? %>
                    <li class="nav-item dropdown">
                        <%= link_to("#", { class: "nav-link dropdown-toggle", id: "navbardrop", 'data-toggle':"dropdown" }) do %>
