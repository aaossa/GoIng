<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <%= link_to root_path, class: "navbar-brand" do %>
                <span>Proyecto <b>GoIng</b></span>
            <% end %>
