                    <% end %>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <% if signed_in? %>
                            <%= link_to(signout_path, { class: "nav-link", disabled: true}) do %>
                                Salir (<%= current_user.google_email %>)
                            <% end %>
                        <% else %>
                            <%= link_to("/auth/google", { class: "nav-link" }) do %>
                                <span class="fa fa-google"></span> Ingresa con Google
                            <% end %>
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
