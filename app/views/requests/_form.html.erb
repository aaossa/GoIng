<%= form_with(model: request, local: true) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :participants %><br>
    <%= form.fields_for :participants, OpenStruct.new(form.object.participants || {}) do |participant| %>
      <%= participant.text_field "0", { multiple: true, name: 'request[participants][0]', disabled: true, value: current_user.google_email } %><br>
      <%= participant.text_field "1", { multiple: true, name: 'request[participants][1]' }  %><br>
      <%= participant.text_field "2", { multiple: true, name: 'request[participants][2]' }  %><br>
      <%= participant.text_field "3", { multiple: true, name: 'request[participants][3]' }  %>
    <% end %>
  </div>
 
  <div class="field">
    <%= form.label :course %><br>
    <%= form.collection_select(:course_id, Course.all, :id, :name, {}, {id: "course", onchange: "updateFromCourse();"}) %>
  </div>

  <div class="field">
    <%= form.label :contents %><br>
    <%= form.text_area :contents %>
  </div>

  <div class="field">
    <%= form.label :first_preference %><br>
    <%= form.collection_select(:preference_blocks, {}, nil, nil, {}, { name: 'request[preference_blocks][]', id: "first_preference", onchange: "updateFromTimeBlock(1);" }) %>
    <%= form.collection_select(:preference_dates, [], nil, nil, {}, { name: 'request[preference_dates][]', id: "first_date", include_blank: true, default: nil }) %>
  </div>

  <div class="field">
    <%= form.label :second_preference %><br>
    <%= form.collection_select(:preference_blocks, {}, nil, nil, {}, { name: 'request[preference_blocks][]', id: "second_preference", onchange: "updateFromTimeBlock(2);" }) %>
    <%= form.collection_select(:preference_dates, [], nil, nil, {}, { name: 'request[preference_dates][]', id: "second_date", include_blank: true, default: nil }) %>
  </div>

  <div class="field">
    <%= form.label :third_preference %><br>
    <%= form.collection_select(:preference_blocks, {}, nil, nil, {}, { name: 'request[preference_blocks][]', id: "third_preference", onchange: "updateFromTimeBlock(3);" }) %>
    <%= form.collection_select(:preference_dates, [], nil, nil, {}, { name: 'request[preference_dates][]', id: "third_date", include_blank: true, default: nil }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
