<%= form_with(model: teaching_assistant, local: true) do |form| %>
    <!-- Errors explanation -->
    <% if teaching_assistant.errors.any? %>
        <%= errors_for(teaching_assistant, "tu peticiÃ³n") %>
    <% end %>
    <!-- Name -->
    <div class="form-group row">
        <div class="col-md-2"></div>
        <%= form.label :name, "Nombre", class: "col-md-2 col-form-label text-center" %>
        <div class="col-md-6">
            <%= form.text_field(:name, { class: "form-control", placeholder: "Nombre ayudante" }) %>
        </div>
        <div class="col-md-2"></div>
    </div>
    <!-- Email -->
    <div class="form-group row">
        <div class="col-md-2"></div>
        <%= form.label :email, "Correo", class: "col-md-2 col-form-label text-center" %>
        <div class="col-md-6">
            <%= form.email_field(:email, { class: "form-control", placeholder: "Correo ayudante" }) %>
        </div>
        <div class="col-md-2"></div>
    </div>
    <!-- Phone number -->
    <div class="form-group row">
        <div class="col-md-2"></div>
        <%= form.label :phone_number, "Celular", class: "col-md-2 col-form-label text-center" %>
        <div class="col-md-6">
            <%= form.telephone_field(:phone_number, { class: "form-control", placeholder: "Celular ayudante" }) %>
        </div>
        <div class="col-md-2"></div>
    </div>
    <!-- Courses -->
    <div class="form-group row">
        <div class="col-md-2"></div>
        <%= form.label :courses, "Cursos", class: "col-md-2 col-form-label text-center" %>
        <div class="col-md-6">
            <%= form.collection_check_boxes(:course_ids, Course.all, :id, :name, { class: "col-md-6" } ) do |course| %>
                <div class="form-check">
                <%= course.label(class: "form-check-label") do %>
                    <%= course.check_box(class: "form-check-input") + course.text %>
                <% end %>
                </div>
            <% end %>
        </div>
        <div class="col-md-2"></div>
    </div>
    <!-- Time blocks -->
    <div class="form-group row">
        <div class="col-md-2"></div>
        <%= form.label :time_blocks, "MÃ³dulos", class: "col-md-2 col-form-label text-center" %>
        <div class="col-md-6">
            <%= form.collection_check_boxes(:time_block_ids, TimeBlock.all, :id, :display_block, { class: "col-md-6" } ) do |tb| %>
                <div class="form-check">
                <%= tb.label(class: "form-check-label") do %>
                    <%= tb.check_box(class: "form-check-input") + tb.text %>
                <% end %>
                </div>
            <% end %>
        </div>
        <div class="col-md-2"></div>
    </div>
    <!-- Submit -->
    <div class="form-actions">
        <div class="col-auto">
            <%= button_tag(class: "btn btn-primary btn-lg") do %>
            <span class="fa fa-glasses"></span> Guardar ayudante
            <% end %>
        </div>
    </div>
<% end %>