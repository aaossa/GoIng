<p id="notice"><%= notice %></p>

<h1>Teaching Assistants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if current_user.role?(:admin) %>
      <th>Phone number</th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @teaching_assistants.each do |teaching_assistant| %>
      <tr>
        <% if can? :show, TeachingAssistant %>
        <td><%= link_to teaching_assistant.name, teaching_assistant %></td>
        <% else %>
        <td><%= teaching_assistant.name %></td>
        <% end %>
        <td><%= teaching_assistant.email %></td>
        <% if current_user.role?(:admin) %>
        <td><%= number_to_phone(teaching_assistant.phone_number, delimiter: " ") %></td>
        <td><%= link_to 'Edit', edit_teaching_assistant_path(teaching_assistant) %></td>
        <td><%= link_to 'Destroy', teaching_assistant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :new, TeachingAssistant %>
<%= link_to 'New Teaching Assistant', new_teaching_assistant_path %>
<% end %>
<%= link_to 'Back', root_path %>
